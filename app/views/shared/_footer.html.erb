<div class="footer d-flex justify-content-around mx-10px">
  <div class="d-flex">
    <%= image_tag "perso.png", style: "width:40px; object-fit:contain;" %>
  </div>
  <div class="d-flex">
    <%= image_tag "home.png", style: "width:40px; object-fit:contain;" %>
  </div>
  <div class="d-flex">
    <% if current_user&.chatrooms&.any? %>
      <%= link_to chatroom_path(current_user.chatrooms.last) do %>
      <%= image_tag "bubble.png", style: "width:40px; object-fit:contain;" %>
      <% end %>
    <% end %>
  </div>
</div>
