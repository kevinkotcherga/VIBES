<h1>Questionnaire de personnalit√©</h1>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <%= simple_form_for @user, url: personality_questionnaire_path, method: :post do |f| %>
        <% @questions.each do |question|%>
          <h2>
            <%= question.label %>
          </h2>
          <% question.responses.each do |response| %>
            <%= check_box_tag 'user[response_ids][]', response.id, false, id: "response-#{response.id}" %>
            <%= label_tag "response-#{response.id}", response.label %>
          <% end %>
        <% end %>
        <%= f.submit "Je valide", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
