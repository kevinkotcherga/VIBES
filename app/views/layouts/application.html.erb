<!DOCTYPE html>
<html>
  <head>
    <title>VIBES</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <div style="min-height: 100vh; overflow: hidden;">
      <%= render "shared/navbar" unless action_name == "home" %>
      <%= yield %>
      <%= render 'shared/footer' unless action_name == "home" || (action_name == "new" && controller_name == "sessions") || (action_name == "new" && controller_name == "personality_questionnaires") %>
    </div>
  </body>
</html>
